<div id="slideshow">
    <div class="row-fluid">
        <div id="myCarousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/slider/slideshow.jpg" alt="slide" class="img-responsive">
                    <div class="carousel-caption">
                        <h3>Welcome to ClickShopBD</h3>
                        <p>Brand is our main priority</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/slider/slider1.jpg" alt="slide" class="img-responsive">
                    <div class="carousel-caption">
                        <h3>Lattest design clotes</h3>
                        <p>branded and local</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/slider/slider2.gif" alt="slide" class="img-responsive">
                    <div class="carousel-caption">
                        <h3>Lattest technologies</h3>
                        <p>mobiles tablets etc</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </div>
    </div>
</div>

